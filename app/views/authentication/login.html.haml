%section{:id => 'login'}
  .section_container
    = form_tag login_path do
      .form_left
        %h2= current_account.title
      .form_right
        %div
          = label_tag 'username_or_email', 'Username or Email'
          = text_field_tag 'username_or_email', nil, :required => true
        %div
          = label_tag 'password', 'Password'
          = password_field_tag 'password', nil, :required => true
        %div
          = check_box_tag 'remember'
          %span{:class => 'remember'} Remember me
        %div
          = submit_tag 'Sign In'
      .clearfix
  %p
    = link_to 'Forgot your password?', recover_path