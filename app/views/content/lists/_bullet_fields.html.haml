%fieldset
  %div
    = f.label :title, 'Title'
    = f.text_field :title
  %div
    = f.label :index, 'Index'
    = f.number_field :index
  %div
    = f.label :content, 'Content'
    = f.text_area :content, :rows => 3
  %div
    = f.label :_destroy, 'Remove'
    = f.hidden_field :_destroy
    = link_to 'Remove', '#', :class => 'remove_fields button'