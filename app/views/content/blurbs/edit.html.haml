%section{:id => 'content_blurbs_edit'}
  .sidebar
    .sidebar_header
      = image_tag(@blurb.image.url, :size => "60x60", :alt => "Image")
      %h2= @blurb.title
    .sidebar_nav
      %nav.content_nav
        %div{:class => 'selected'}
          %a{:href => '#blurb'} Blurb
        - if current_user.administrator?
          %div
            %a{:href => '#administrator'} Administrator
    .sidebar_buttons
      = submit_tag 'Save', :form => "edit_blurb_#{@blurb.id}"
      = link_to 'Back to blurbs', content_blurbs_path
  .content
    = render :partial => 'form', :locals => {:blurb => @blurb, :url => content_blurb_path}