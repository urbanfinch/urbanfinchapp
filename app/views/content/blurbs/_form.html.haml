= render :partial => 'shared/error', :locals => {:object => blurb}
= form_for blurb, :url => url do |f|
  %div{:id => 'blurb', :class => 'content_div'}
    %h2 Blurb
    %hr
    %div.hidden
      = f.hidden_field :account_id
    %div
      = f.label :title, 'Title'
      = f.text_field :title
    %div
      = f.label :subtitle, 'Subtitle'
      = f.text_field :subtitle
    %div
      = f.label :image, 'Image'
      = f.file_field :image
    %div
      %label
      = f.text_field :image_url, :placeholder => 'http://example.com/path/to/image.png'
    %div.help
      %p Image will be automatically resized
    %div
      = f.label :image_delete, 'Remove Image?'
      = f.check_box :image_delete
  %div{:id => 'content', :class => 'content_div'}
    %h2 Content
    %hr
    %div
      = f.cktext_area :content, :ckeditor => {:toolbar => 'urbanfinch', :height => 400}
  %div{:id => 'administrator', :class => 'content_div'}
    %h2 Administrator
    %hr
    %div
      = f.label :identifier, 'Identifier'
      = f.text_field :identifier