%section{:id => 'content_posts_new'}
  .sidebar
    .sidebar_header
      %h2 New Post
    .sidebar_nav
      %nav.content_nav
        %div{:class => 'selected'}
          %a{:href => '#post'} Post
        %div
          %a{:href => '#content'} Content
    .sidebar_buttons
      = submit_tag 'Save', :form => 'new_post'
      = link_to 'Back to posts', content_posts_path
  .content
    = render :partial => 'form', :locals => {:post => @post, :url => content_posts_path}