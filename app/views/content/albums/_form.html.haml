= render :partial => 'shared/error', :locals => {:object => album}
= form_for album, :url => url do |f|
  %div{:id => 'album', :class => 'content_div'}
    %h2 Album
    %hr
    %div.hidden
      = f.hidden_field :account_id
    %div
      = f.label :name, 'Name'
      = f.text_field :name
    %div
      = f.label :description, 'Description'
      = f.text_area :description, :rows => 5
    %div
      = f.label :index, 'Index'
      = f.number_field :index
    %div
      = f.label :image, 'Image'
      = f.file_field :image
    %div
      %label
      = f.text_field :image_url, :placeholder => 'http://example.com/path/to/image.png'
    %div.help
      %p Image will be automatically resized
  %div{:id => 'images', :class => 'content_div'}
    .heading
      %h2 Images
      %nav
        = link_to_add_fields 'Add image', f, :images
    %hr
    .fields
      = f.fields_for :images do |i|
        = render 'image_fields', :f => i
  %div{:id => 'administrator', :class => 'content_div'}
    %h2 Administrator
    %hr
    %div
      = f.label :identifier, 'Identifier'
      = f.text_field :identifier