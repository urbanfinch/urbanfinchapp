%section{:id => 'content_employees_new'}
  .sidebar
    .sidebar_header
      %h2 New Employee
    .sidebar_nav
      %nav.content_nav
        %div{:class => 'selected'}
          %a{:href => '#employee'} Employee
        %div
          %a{:href => '#phones'} Phones
        %div
          %a{:href => '#urls'} URLs
    .sidebar_buttons
      = submit_tag 'Save', :form => 'new_employee'
      = link_to 'Back to employees', content_employees_path
  .content
    = render :partial => 'form', :locals => {:employee => @employee, :url => content_employees_path}